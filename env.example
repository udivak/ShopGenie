# ShopGenie Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Optional: Request timeout in seconds (default: 10)
REQUEST_TIMEOUT=10

# Optional: Maximum retry attempts for failed requests (default: 3)
MAX_RETRY_ATTEMPTS=3

# Optional: Delay between requests in seconds (default: 1.0)
DELAY_BETWEEN_REQUESTS=1.0

# Optional: Maximum search results to scrape (default: 10)
MAX_SEARCH_RESULTS=10

# Optional: Number of top results to return to user (default: 4)
TOP_RESULTS_COUNT=4

# Optional: User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36